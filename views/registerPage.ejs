<!DOCTYPE>
<head>
  <title>Test</title>
   <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
  <h1 class="header">Register</h1>

  <% if (success) { %>
    <div class="form-container">
      <div class="w3-panel w3-green w3-card-4">
        <h3>Success</h3>
        <p><%= success %></p>
      </div>
    </div>
  <% } %>

  <div class="form-container w3-card-4 container">
    <form class="w3-container" action="" method="post">
      <p>
        <label class="w3-text-blue"><b>Username</b></label>
        <input class="w3-input w3-border" name="username" type="text" required>
      </p>
      <p>
        <label class="w3-text-blue"><b>Password</b></label>
        <input class="w3-input w3-border" name="password" type="password" required>
      </p>
      <p>
        <label class="w3-text-blue"><b>Email</b></label>
        <input class="w3-input w3-border" name="email" type="email" required>
      </p>
      <p>
        <label class="w3-text-blue"><b>Floor</b></label>
        <select name="FloorId">
          <% data.floors.forEach(floor => { %>
            <option value="<%= floor.id %>"><%= floor.name %></option>
          <% }) %>
        </select>
      </p>
      <p>
        <button class="w3-btn w3-blue">Submit</button>
      </p>
      <p>
        <a href="/login">Already registered?</a>
      </p>
    </form>
  </div>
</body>

</html>
